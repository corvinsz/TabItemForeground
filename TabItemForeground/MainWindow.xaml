<Window x:Class="TabItemForeground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TabItemForeground"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="450"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d">
    <TabControl HorizontalAlignment="Center" VerticalAlignment="Center">
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Bin" />
                    <TextBlock Text="Tab 1" />
                </StackPanel>
            </TabItem.Header>
            <TextBlock Text="Content 1" />
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Bin" />
                    <TextBlock Text="Tab 2" />
                </StackPanel>
            </TabItem.Header>
            <TextBlock Text="Content 2" />
        </TabItem>
    </TabControl>
</Window>
